{
  "name": "bluewatt-backend",
  "version": "1.0.0",
  "description": "BlueWatt Electrical Monitoring Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate:up": "ts-node src/database/migrate.ts up",
    "migrate:down": "ts-node src/database/migrate.ts down",
    "migrate:status": "ts-node src/database/migrate.ts status",
    "seed": "ts-node src/database/seeds/run.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "electrical-monitoring",
    "iot",
    "esp32",
    "power-monitoring",
    "anomaly-detection"
  ],
  "author": "BlueWatt Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "mysql2": "^3.9.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.2.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.12.0",
    "winston-daily-rotate-file": "^5.0.0",
    "dotenv": "^16.4.5",
    "node-cron": "^3.0.3",
    "compression": "^1.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/uuid": "^9.0.8",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.4.2",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
